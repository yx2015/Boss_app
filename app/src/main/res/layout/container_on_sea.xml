<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_on_sea"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_haishang_port"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_qiyun_port"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:gravity="right"
        android:text="海上运输:"
        android:textColor="@color/txt_color_gray"
        android:textSize="@dimen/normal_text_size" />

    <TextView
        android:id="@+id/tv_haishang_port_20GP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_qiyun_port_20GP"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/tv_haishang_port"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/orange"
        android:textSize="@dimen/normal_text_size"
        tools:text="50" />

    <TextView
        android:id="@+id/tv_haishang_port_40GP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_qiyun_port_40GP"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/tv_haishang_port_20GP"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/orange"
        android:textSize="@dimen/normal_text_size"
        tools:text="3" />

    <TextView
        android:id="@+id/tv_haishang_port_40HQ"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_qiyun_port_40HQ"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/tv_haishang_port_40GP"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/orange"
        android:textSize="@dimen/normal_text_size"
        tools:text="0" />

</LinearLayout>